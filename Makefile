NAME = rtv1

FLAGS = -Wall -Werror -Wextra -framework OpenGl -framework AppKit

SRC = libft/libft.a libmlx.a main.c ft_angles.c

all: $(NAME)

$(NAME):
	make -C libft/
	gcc -o $(NAME) $(FLAGS) $(SRC)

clean:
	make -C libft/ fclean
		
fclean: clean
	rm -f $(NAME)

re : fclean $(NAME)

.PHONY: all clean fclean re
